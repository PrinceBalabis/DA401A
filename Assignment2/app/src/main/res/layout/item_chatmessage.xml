<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Chat Message -->
    <TextView
        android:id="@+id/chat_message"

        android:layout_width="wrap_content"
        android:layout_height="26dip"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="marquee"
        />

    <!-- Actual Chat Message Data -->
    <TextView
        android:id="@+id/chat_messagedata"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/chat_message"

        android:singleLine="true"
        android:ellipsize="marquee"
        />

    <!-- From -->
    <TextView
        android:id="@+id/chat_from"

        android:layout_width="wrap_content"
        android:layout_height="26dip"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/chat_message"

        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <!-- Actual From Data -->
    <TextView
        android:id="@+id/chat_fromdata"

        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_message"
        android:layout_toRightOf="@id/chat_from"

        android:gravity="center_vertical"
        />

    <!-- Time -->
    <TextView
        android:id="@+id/chat_time"

        android:layout_width="wrap_content"
        android:layout_height="26dip"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/chat_from"

        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <!-- Actual Time Data -->
    <TextView
        android:id="@+id/chat_timedata"

        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_from"
        android:layout_toRightOf="@id/chat_time"

        android:gravity="center_vertical"
        />

</RelativeLayout>