<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SummaryActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total income:"
        android:id="@+id/tv_income"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total expense:"
        android:id="@+id/tv_expense"
        android:layout_below="@+id/tv_income"
        android:layout_alignStart="@+id/tv_income" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="income_data"
        android:id="@+id/tv_income_data"
        android:layout_above="@+id/tv_expense"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expense_data"
        android:id="@+id/tv_expense_data"
        android:layout_below="@+id/tv_income_data"
        android:layout_alignStart="@+id/tv_income_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary:"
        android:id="@+id/tv_summary"
        android:layout_below="@+id/tv_expense"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="summary"
        android:id="@+id/tv_summary_data"
        android:layout_below="@+id/tv_expense_data"
        android:layout_alignStart="@+id/tv_expense_data" />

</RelativeLayout>
